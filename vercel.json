{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],  "routes": [
    {
      "src": "/api/auth/register",
      "dest": "/api/auth/register.js"
    },
    {
      "src": "/api/auth/login",
      "dest": "/api/auth/login.js"
    },
    {
      "src": "/api/auth/profile",
      "dest": "/api/auth/profile.js"
    },
    {
      "src": "/api/auth/verify",
      "dest": "/api/auth/verify.js"
    },
    {
      "src": "/api/favorites$",
      "dest": "/api/favorites/index.js"
    },
    {
      "src": "/api/favorites/check/([^/]+)$",
      "dest": "/api/favorites/check/[word].js?word=$1"
    },
    {
      "src": "/api/favorites/id/([^/]+)$",
      "dest": "/api/favorites/id/[id].js?id=$1"
    },
    {
      "src": "/api/favorites/([^/]+)$",
      "dest": "/api/favorites/[word].js?word=$1"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
